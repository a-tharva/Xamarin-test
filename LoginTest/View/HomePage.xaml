<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.View.HomePage"
             >
    <ContentPage.Content>
        <StackLayout>
            
            <Label Margin="0,100,0,0" Text="Welcome to Home Page" HorizontalOptions="Center"/>

            <Label Padding="0,50" HorizontalOptions="Center" Text="File Picker"/>
            <Button Text="Pick File" Margin="10" CornerRadius="5" Clicked="ButtonPickFile"/>
            <Label x:Name="fileName" FontSize="Large" HorizontalOptions="Center"></Label>
            <Image x:Name="imgFile" WidthRequest="200" HeightRequest="200"></Image>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>