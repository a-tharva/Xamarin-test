<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.View.ApiPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Margin="0,100,0,0"
                Text="Welcome to Api View" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Api Call" Margin="02,150,02,0" CornerRadius="10" Clicked="ApiCall"/>

            <Frame BackgroundColor="#e8f4fc" CornerRadius="10" Margin="02,0" Padding="20,50">
                <StackLayout x:Name="ApiAnswer">
                    <Label Text=""/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>